<Page x:Class="_422_Vybornov.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Vybornov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPaymentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название платежа" Grid.Row="0" FontSize="18" Margin="17,29,569,92"/>
        <TextBox x:Name="TBPaymentName"
                Grid.Row="0"
                Margin="400,26,48,95"
                Text="{Binding Name}"/>

        <TextBlock Text="Сумма" FontSize="18" Margin="17,78,615,41"/>
        <TextBox x:Name="TBAmount"
                Margin="400,75,48,45"
                Text="{Binding Price}"/>

        <Button x:Name="ButtonSave" Content="Сохранить" Grid.Row="2" Click="ButtonSave_Click" Margin="11,95,447,12" Height="NaN"/>
        <Button x:Name="ButtonClean" Content="Очистить" Grid.Row="2" Click="ButtonClean_Click" Margin="448,95,10,12" Height="NaN"/>

        <TextBlock Grid.Row="1" FontSize="18" Margin="24,14,560,104"><Run Language="ru-ru" Text="Количество"/></TextBlock>
        <TextBox x:Name="TBCount"
                Grid.Row="1"
                Margin="400,10,48,109"
                Text="{Binding Num}"/>

        <TextBlock Grid.Row="1" FontSize="18" Margin="24,66,621,53"><Run Language="ru-ru" Text="Дата"/></TextBlock>
        <DatePicker x:Name="DPDate" 
                   Grid.Row="1" 
                   Margin="400,62,48,57" 
                   SelectedDate="{Binding Date}"
                   HorizontalAlignment="Left" 
                   Width="200"/>

        <ComboBox x:Name="CBUser" Grid.Row="1" Margin="400,109,48,10" SelectedValuePath="ID"
                SelectedValue="{Binding Path=UserID}" DisplayMemberPath="FIO"/>

        <ComboBox x:Name="CBCategory"
                Grid.Row="2"
                Margin="400,10,48,109"
                SelectedValuePath="ID"
                SelectedValue="{Binding Path=CategoryID}" DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="1" FontSize="18" Margin="24,113,621,6"><Run Text="ID"/><Run Language="ru-ru" Text=" клиента"/></TextBlock>
        <TextBlock Grid.Row="2" FontSize="18" Margin="24,14,622,105"><Run Text="ID"/><Run Language="ru-ru" Text=" категории"/></TextBlock>
    </Grid>
</Page>