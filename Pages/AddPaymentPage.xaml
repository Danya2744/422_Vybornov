<Page x:Class="_422_Vybornov.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Vybornov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPaymentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название платежа" Grid.Row="0" FontSize="20" Margin="17,25,569,96"/>
        <TextBox x:Name="TBPaymentName"
                Grid.Row="0"
                Margin="400,26,48,95"
                Text="{Binding Name}"/>

        <TextBlock Text="Сумма" FontSize="20" Margin="17,74,615,45"/>
        <TextBox x:Name="TBAmount"
                Margin="400,75,48,45"
                Text="{Binding Price}"/>

        <Button x:Name="ButtonSave" Content="Сохранить" Grid.Row="2" Click="ButtonSave_Click" Margin="11,95,447,12" Height="NaN"/>
        <Button x:Name="ButtonClean" Content="Очистить" Grid.Row="2" Click="ButtonClean_Click" Margin="448,95,10,12" Height="NaN"/>

        <TextBlock Grid.Row="1" FontSize="20" Margin="24,10,560,108"><Run Language="ru-ru" Text="Количество"/></TextBlock>
        <TextBox x:Name="TBCount"
                Grid.Row="1"
                Margin="400,10,48,109"
                Text="{Binding Num}"/>

        <TextBlock Grid.Row="1" FontSize="20" Margin="24,62,621,57"><Run Language="ru-ru" Text="Дата"/></TextBlock>
        <TextBox x:Name="TBDate" Grid.Row="1" Margin="400,62,48,57" Text="{Binding Date}"/>

        <ComboBox x:Name="CBUser" Grid.Row="1" Margin="400,109,48,10" SelectedValuePath="ID"
                SelectedValue="{Binding Path=UserID}" DisplayMemberPath="FIO"/>

        <ComboBox x:Name="CBCategory"
                Grid.Row="2"
                Margin="400,10,48,109"
                SelectedValuePath="ID"
                SelectedValue="{Binding Path=CategoryID}" DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="1" FontSize="20" Margin="24,109,621,10"><Run Text="ID"/><Run Language="ru-ru" Text=" клиента"/></TextBlock>
        <TextBlock Grid.Row="2" FontSize="20" Margin="24,10,622,109"><Run Text="ID"/><Run Language="ru-ru" Text=" категории"/></TextBlock>
    </Grid>
</Page>
