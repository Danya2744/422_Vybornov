<Page x:Class="_422_Vybornov.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Vybornov.Pages"
      mc:Ignorable="d" 
      Title="AdminPage">
    <Grid Height="280">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="BtnTab1" Content="Таблица пользователей" 
                Grid.Row="1" Grid.Column="1"
                Height="41" Width="181" 
                Margin="10"
                Click="BtnTab1_Click"/>

        <Button x:Name="BtnTab2" Content="Таблица категорий" 
                Grid.Row="1" Grid.Column="2"
                Height="41" Width="174" 
                Margin="10"
                Click="BtnTab2_Click"/>

        <Button x:Name="BtnTab3" Content="Таблица платежей" 
                Grid.Row="1" Grid.Column="3"
                Height="41" Width="163" 
                Margin="10"
                Click="BtnTab3_Click"/>

        <Button x:Name="BtnTab4" Content="Диаграммы" 
                Grid.Row="3" Grid.Column="2"
                Height="41" Width="131" 
                Margin="10"
                Click="BtnTab4_Click"/>
    </Grid>
</Page>
