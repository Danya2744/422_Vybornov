<Page x:Class="_422_Vybornov.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Vybornov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" Margin="10" FontSize="16" VerticalAlignment="Center"/>
        <TextBox x:Name="TbLogin" Grid.Column="1" Margin="10,0,60,0" Height="30" VerticalAlignment="Center"/>

        <TextBlock Text="Текущий пароль" Grid.Row="1" Grid.Column="0" Margin="10" FontSize="16" VerticalAlignment="Center"/>
        <PasswordBox x:Name="CurrentPasswordBox" Grid.Row="1" Grid.Column="1" Margin="10,0,60,0" Height="30" VerticalAlignment="Center"/>

        <TextBlock Text="Новый пароль" Grid.Row="2" Grid.Column="0" Margin="10" FontSize="16" VerticalAlignment="Center"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="2" Grid.Column="1" Margin="10,0,60,0" Height="30" VerticalAlignment="Center"/>

        <TextBlock Text="Подтвердите пароль" Grid.Row="3" Grid.Column="0" Margin="10" FontSize="16" VerticalAlignment="Center"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="3" Grid.Column="1" Margin="10,0,60,0" Height="30" VerticalAlignment="Center"/>

        <Button x:Name="BtnSave" Content="Сохранить" Grid.Row="4" Grid.ColumnSpan="2" 
                Margin="10" Height="35" Width="120" HorizontalAlignment="Center"
                Click="BtnSave_Click"/>
    </Grid>
</Page>
