<Page x:Class="_422_Vybornov.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Vybornov.Pages"
      mc:Ignorable="d" 
      Title="AddUserPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0"
                  FontSize="16" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TBLogin" Grid.Row="0" Grid.Column="1"
                Text="{Binding Login}" ToolTip="Введите логин"
                Margin="0,0,0,10" Height="30"/>

        <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0"
                  FontSize="16" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TBPass" Grid.Row="1" Grid.Column="1"
                Text="{Binding Password}" ToolTip="Введите пароль"
                Margin="0,0,0,10" Height="30"/>

        <TextBlock Text="Роль" Grid.Row="2" Grid.Column="0"
                  FontSize="16" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbRole" Grid.Row="2" Grid.Column="1"
                 SelectedItem="{Binding Role}" ToolTip="Выберите роль"
                 Margin="0,0,0,10" Height="30">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="User"/>
        </ComboBox>

        <TextBlock Text="ФИО" Grid.Row="3" Grid.Column="0"
                  FontSize="16" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TBFio" Grid.Row="3" Grid.Column="1"
                Text="{Binding FIO}" ToolTip="Введите ФИО"
                Margin="0,0,0,10" Height="30"/>

        <TextBlock Text="Фото (необязательно)" Grid.Row="4" Grid.Column="0"
                  FontSize="16" Margin="0,0,10,10" VerticalAlignment="Center"/>

        <Border x:Name="ImageBorder" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                BorderBrush="Gray" BorderThickness="1" Background="White"
                Margin="0,0,0,10" Height="170" ToolTip="Выберите фото">
            <Grid>
                <Image x:Name="UserImage" 
                       Stretch="Uniform" 
                       MaxHeight="100" MaxWidth="100"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Visibility="Collapsed"/>

                <TextBlock x:Name="ImagePlaceholder" 
                          Text="Перетащите изображение сюда или нажмите для выбора"
                          TextWrapping="Wrap" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          TextAlignment="Center" Foreground="Gray"
                          Margin="10"/>

                <Button x:Name="SelectImageButton" 
                        Content="Выбрать изображение" 
                        HorizontalAlignment="Center" VerticalAlignment="Bottom"
                        Margin="0,0,0,5" Padding="10,5"
                        Click="SelectImageButton_Click"/>
            </Grid>
        </Border>

        <!-- Предпросмотр изображения -->
        <TextBlock Text="Предпросмотр:" Grid.Row="5" Grid.Column="0"
                  FontSize="14" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBlock x:Name="SelectedImagePath" Grid.Row="5" Grid.Column="1"
                  Text="{Binding Photo}" FontSize="12" Foreground="Blue"
                  Margin="0,0,0,5" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3"
                   Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="ButtonClean" Content="Очистить" 
                   Click="ButtonClean_Click" Width="100" Height="40" Margin="0,0,10,0"/>
            <Button x:Name="ButtonSave" Content="Сохранить" 
                   Click="ButtonSave_Click" Width="100" Height="41"/>
        </StackPanel>
    </Grid>
</Page>