<Page x:Class="_422_Vybornov.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Vybornov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCategoryPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название категории" Grid.Row="0" FontSize="20" Margin="55,95,444,99" RenderTransformOrigin="0.258,2.273"/>
        <TextBox x:Name="TBCategoryName" Grid.Row="0"
                Margin="400,94,164,103"
                Text="{Binding Name}"
                ToolTip="Введите название категории"/>

        <Button x:Name="ButtonSaveCategory" Content="Сохранить" Grid.Row="1" Click="ButtonSaveCategory_Click" Margin="249,81,249,104" Height="NaN"/>
        <Button x:Name="ButtonClean" Content="Очистить" Grid.Row="1" Click="ButtonClean_Click" Margin="249,143,249,44" Height="NaN"/>
    </Grid>
</Page>
