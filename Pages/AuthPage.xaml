<Page x:Class="_422_Vybornov.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Vybornov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid HorizontalAlignment="Center" 
          Width="800" 
          Height="450" 
          VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="529*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="233*" />
        </Grid.RowDefinitions>

        <Label Content="Логин" 
               Margin="205,118,0,0" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top"
               Grid.Row="0"
               FontWeight="DemiBold"/>
        <Label Content="Пароль" 
               x:Name="labelPass" 
               Margin="201,185,0,0" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top"
               Width="64" 
               Grid.Row="0" 
               FontWeight="DemiBold"/>

        <TextBox x:Name="TextBoxLogin" 
                 Background="White" 
                 Margin="36,0,0,69" 
                 TextWrapping="Wrap" 
                 ToolTip="Введите логин или почту" 
                 TextChanged="TextBoxLogin_TextChanged"
                 Height="34" 
                 VerticalAlignment="Bottom" 
                 HorizontalAlignment="Left" 
                 Width="186" 
                 Grid.Column="1" />

        <Button x:Name="ButtonEnter" 
                Margin="234,10,0,0" 
                Height="34" 
                Content="Вход" 
                ToolTip="Кнопка входа" 
                Grid.Row="1" 
                HorizontalAlignment="Left" 
                Width="120" 
                VerticalAlignment="Top" 
                Click="ButtonEnter_OnClick" Grid.ColumnSpan="2"/>
        <Button x:Name="ButtonReg"
                Margin="179,9,0,0" 
                Height="36" 
                Content="Регистрация" 
                ToolTip="Кнопка регистрации" 
                Grid.Row="1" 
                HorizontalAlignment="Left" 
                Width="121" 
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Click="ButtonReg_Click" />
        <Button x:Name="ButtonChangePassword" 
                Margin="69,66,0,0" 
                Height="37" 
                Content="Смена пароля" 
                ToolTip="Кнопка смены пароля" 
                Grid.Row="1" 
                HorizontalAlignment="Left" 
                Width="120" 
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Click="ButtonChangePassword_Click" />
        <PasswordBox x:Name="PasswordBox" 
                     Background="White" 
                     ToolTip="Введите пароль" 
                     Margin="0,0,307,3" 
                     HorizontalAlignment="Right" 
                     Width="186" 
                     Height="32" 
                     VerticalAlignment="Bottom" 
                     Grid.Column="1" 
                     PasswordChanged="PasswordBox_PasswordChanged"  />
        <TextBox Grid.Column="1"
             CommandManager.PreviewExecuted="textBox_PreviewExecuted" 
             ContextMenu="{x:Null}"
             Visibility="Hidden"
             x:Name="captcha"
             Height="42"
             Foreground="Red"
             FontStyle="Italic"
             FontWeight="Heavy"
             VerticalAlignment="Top"
             Width="156"
             Background="{x:Null}"
             FontStretch="UltraCondensed"
             IsReadOnly="True"
             HorizontalContentAlignment="Center"
             HorizontalAlignment="Right"
             Margin="0,96,322,0"
             VerticalContentAlignment="Center"
             FontSize="20" />

        <TextBox Grid.Column="1"
             Visibility="Hidden"
             x:Name="captchaInput"
             HorizontalAlignment="Left" 
             Height="34"
             Margin="49,183,0,0"
             TextWrapping="Wrap"
             Text=""
             VerticalAlignment="Top" 
             Width="160" />
        
        <Button x:Name="submitCaptcha" 
            Margin="234,183,0,0"
            Visibility="Hidden"
            Height="34"
            Content="Подтвердить"
            ToolTip="Подтвердить ввод капчи" 
            Grid.Row="1"
            HorizontalAlignment="Left" 
            Width="120"
            VerticalAlignment="Top"
            Grid.Column="1"
            Click="submitCaptcha_Click" />

       <Label Content="Капча:"
           x:Name="labelCaptcha"
           Margin="205,183,0,0"
           Visibility="Hidden"
           HorizontalAlignment="Left"
           Width="54" 
           Grid.Row="0" />
    </Grid>
</Page>
